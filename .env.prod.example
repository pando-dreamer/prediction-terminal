# Production Environment Variables
# Copy this to .env.prod and update with your production values

# Database Configuration
DATABASE_URL=postgresql://your_prod_user:your_prod_password@postgres:5432/prediction_terminal_prod
POSTGRES_DB=prediction_terminal_prod
POSTGRES_USER=your_prod_user
POSTGRES_PASSWORD=your_secure_production_password

# Backend Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# JWT Configuration (MUST be changed for production)
JWT_SECRET=your-super-secure-random-jwt-secret-key-for-production
JWT_EXPIRES_IN=7d

# Frontend Configuration
REACT_APP_API_URL=https://api.your-domain.com/graphql
REACT_APP_WS_URL=wss://api.your-domain.com/graphql